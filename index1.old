//CAPTURAR EL IDIOMA DE LOS QUERY PARAMETER E INCLUIR LA PAGINA CORRESPONDIENTE
if (isset($_GET['lang'])) {
	setcookie("lang", $_GET["lang"], time() + 3600);
	include "languages/" . $_GET['lang'] . ".php";
} else {

	if (isset($_COOKIE['lang'])) {		
		include "languages/" . $_COOKIE['lang'] . ".php";
		
	} else {
		//Pagina por defecto
		setcookie("lang", "es", time() + 3600);
		include 'languages/es.php';
	}
}


